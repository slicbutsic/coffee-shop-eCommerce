<div class="w-full md:w-1/2 lg:w-3/5">
  <div class="mt-8 md:mt-12 <%= @product.category.name == 'Mugs' ? 'lg:mt-36' : 'lg:mt-12' %>">
    <div class="h-94 w-4/5 md:w-4/5 lg:w-4/5 mx-auto border border-gray-300 shadow-lg p-4 flex flex-col items-center text-center">
      <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 afacad transition duration-200"><%= @product.name %></h1>

      <p class="text-xl afacad mb-4">
        <span class="font-semibold text-[#257A57] afacad"><%= number_to_currency(@product.price) %></span>
      </p>

      <p class="text-gray-500 mb-6 afacad w-full max-w-md text-xl"><%= @product.description %></p>

      <%# partial coffee intensity %>
      <%= render partial: 'intensity', locals: { product: @product } %>

      <div class="space-y-4 w-full max-w-xs">
        <% if user_signed_in? %>
          <%= button_to 'Update Basket', add_item_cart_path(product_id: @product.id), method: :post, class: 'bg-[#257A57] py-3 px-7 rounded-full text-white inline-block transition duration-300 afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)] w-full' %>
        <% else %>
          <p class="text-gray-500 afacad mb-4">You need to log in to add items to your cart.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
