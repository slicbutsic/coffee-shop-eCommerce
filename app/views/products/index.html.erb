<div class='container mx-auto mt-9 px-5' data-controller="login-heart">
  <div id="product-list">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 p-4">
      <% if @products.any? %>
        <% @products.each do |product| %>
          <%# partial product card %>
          <%= render 'product_index_card', product: product %>
        <% end %>
      <% else %>
        <p class="col-span-full text-center text-gray-500">No products found.</p>
      <% end %>
    </div>
  </div>
  <%= render 'shared/login_heart_modal' %>
</div>
