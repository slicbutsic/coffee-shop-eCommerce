<%# carousel %>
<div class="mt-8 sm:mt-12 md:mt-16 relative w-full max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8"
     data-controller="carousel"
     data-action="mouseenter->carousel#mouseEnter mouseleave->carousel#mouseLeave">
  <div class="overflow-hidden shadow-lg">
    <% ["dash1.jpg", "dash2.jpg", "dash3.jpg"].each do |image| %>
      <% full_image_path = "/images/#{image}" %>
      <%= image_tag full_image_path,
          class: "w-full h-[200px] sm:h-[300px] md:h-[400px] lg:h-[450px] xl:h-[500px] object-cover transition-opacity duration-300 ease-in-out",
          data: { carousel_target: "slide" } %>
    <% end %>
  </div>

  <button data-action="carousel#previous"
          class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-2 focus:outline-none transition-all duration-200 ease-in-out">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 lg:h-10 lg:w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <button data-action="carousel#next"
          class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-2 focus:outline-none transition-all duration-200 ease-in-out">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 lg:h-10 lg:w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>
</div>

<%# little slogan %>
<div class="text-center mt-2 sm:mt-3 md:mt-4 mb-3 sm:mb-4 md:mb-5 flex flex-col sm:flex-row items-center justify-center">
  <h1 class="text-2xl sm:text-3xl md:text-3xl lg:text-3xl font-bold afacad mb-2 sm:mb-0">
    Impossibly Delicious.<br class="hidden sm:inline">
    Incredibly Convenient.
  </h1>
  <%= link_to "Explore Products", products_path, class: 'mt-2 sm:mt-0 sm:ml-4 bg-[#257A57] py-1 px-3 sm:py-2 sm:px-4 rounded text-white text-xs sm:text-sm inline-block transition duration-300 afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)]' %>
</div>


<%# coffees of the months %>
<section class="py-8 sm:py-10 md:py-12 bg-gray-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <h2 class="text-2xl sm:text-3xl md:text-3xl lg:text-3xl font-bold mb-4 sm:mb-6 md:mb-8 text-center afacad">
      <span class="block sm:inline">Coffees</span>
      <span class="block sm:inline sm:ml-2">of the Month</span>
    </h2>
    <div class="flex justify-center">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6 justify-items-center">
        <% Product.coffees_of_the_month.each do |product| %>
          <%= render 'products/product_index_card', product: product %>
        <% end %>
      </div>
    </div>
  </div>
</section>

