<div class="max-w-md mx-auto mt-28 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Confirm Your Address</h1>

  <%= form_with(model: @address, url: confirm_address_path, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :street_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :street_number, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :street_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :street_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :city, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :state, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :state, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :postal_code, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :postal_code, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Confirm Address", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md transition duration-300 ease-in-out" %>
    </div>
  <% end %>
</div>
