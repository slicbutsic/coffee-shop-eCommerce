<div class="container mx-auto mt-9 px-4">
  <h1 class="text-3xl font-bold mb-6 afacad">Order Details</h1>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6 bg-gray-100">
      <h3 class="text-lg leading-6 font-medium text-gray-900 afacad">
        Order #<%= @order.id %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 afacad">
        Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 afacad">
            Status
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-green-100 bg-green-600 rounded-full afacad">
              <%= @order.status.capitalize %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">

          <dt class="text-sm font-medium text-gray-500 afacad">
            Product
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 afacad">
            <% @order.order_items.each do |item| %>
              <%= item.product.name %>

              </dd>
              <dt class="text-sm font-medium text-gray-500 afacad">
                Quantity
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 afacad">
                <%= item.quantity %>
              </dd>
             <% end %>
             <dt class="text-sm font-medium text-gray-500 afacad">
            Total Amount
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 afacad">
            <%= number_to_currency(@order.total) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>


  <%= link_to 'Back to Orders', orders_path, class: "mt-6 inline-block bg-indigo-500 hover:bg-indigo600 text-white font-bold py-2 px-4 rounded afacad" %>
</div>
