<div class="container mx-auto mt-32 px-4">
  <h1 class="text-3xl font-bold mb-6">Order Details</h1>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6 bg-gray-100">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Order #<%= @order.id %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Status
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-green-100 bg-green-600 rounded-full">
              <%= @order.status.capitalize %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Total Amount
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= number_to_currency(@order.total) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <h2 class="text-xl font-semibold mt-8 mb-4">Order Items</h2>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <ul class="divide-y divide-gray-200">
      <% @order.order_items.each do |item| %>
        <li class="px-4 py-4 sm:px-6 flex justify-between items-center">
          <div>
            <h3 class="text-sm font-medium text-gray-900">
              <%= item.product.name %>
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              Quantity: <%= item.quantity %>
            </p>
          </div>
          <p class="text-sm font-medium text-gray-900">
            <%= number_to_currency(item.price * item.quantity) %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Optional back button to return to the orders list -->
  <%= link_to 'Back to Orders', orders_path, class: "mt-6 inline-block bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded" %>
</div>
