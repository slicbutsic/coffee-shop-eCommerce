<div class="bg-black h-8">
  <%= link_to "DAILY GRIND ", root_path, class: "ml-20 mt-4 text-2xl text-white afacad bg-black inline-block" %>
</div>
<div class="min-h-screen bg-black flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full mx-auto bg-white rounded-lg shadow-md overflow-hidden mt-14 mb-14">
    <div class="p-8">
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800 afacad-bold">Edit <%= resource_name.to_s.humanize %></h2>

      <p class="mb-12 text-center text-gray-600 afacad text-xl">
        Update your account information below.
      </p>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification class: "mb-4 text-red-500" %>

        <div class="space-y-6 afacad text-xl">
          <div class="flex items-center">
            <%= f.label :email, "Email *", class: 'w-1/3 text-left text-gray-700' %>
            <div class="w-2/3 flex justify-center">
              <%= f.input :email, required: true, autofocus: true, label: false, wrapper_html: { class: 'w-4/5' }, input_html: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="text-center text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <div class="flex items-center">
            <%= f.label :password, "New Password", class: 'w-1/3 text-left text-gray-700' %>
            <div class="w-2/3 flex justify-center">
              <%= f.input :password, required: false, label: false, wrapper_html: { class: 'w-4/5' }, input_html: { autocomplete: "new-password", class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } %>
            </div>
          </div>
          <p class="text-sm text-gray-500 text-center">Leave it blank if you don't want to change it</p>

          <div class="flex items-center">
            <%= f.label :password_confirmation, "Confirm New Password", class: 'w-1/3 text-left text-gray-700' %>
            <div class="w-2/3 flex justify-center">
              <%= f.input :password_confirmation, required: false, label: false, wrapper_html: { class: 'w-4/5' }, input_html: { autocomplete: "new-password", class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } %>
            </div>
          </div>

          <div class="flex items-center">
            <%= f.label :current_password, "Current Password *", class: 'w-1/3 text-left text-gray-700' %>
            <div class="w-2/3 flex justify-center">
              <%= f.input :current_password, required: true, label: false, wrapper_html: { class: 'w-4/5' }, input_html: { autocomplete: "current-password", class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } %>
            </div>
          </div>
          <p class="text-sm text-gray-500 text-center">We need your current password to confirm your changes</p>
        </div>

        <div class="mt-8 flex justify-end">
          <%= f.button :submit, "UPDATE", class: 'bg-[#257A57] py-3 px-16 rounded text-white inline-block transition duration-300 afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)]' %>
        </div>
      <% end %>

      <div class="mt-12 border-t pt-6">
        <h3 class="text-2xl font-bold mb-4 text-center text-gray-800 afacad-bold">Cancel my account</h3>
        <p class="mb-4 text-center text-gray-600 afacad">Unhappy? We're sorry to see you go.</p>
        <div class="flex justify-center">
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'bg-red-500 py-3 px-16 rounded text-white inline-block transition duration-300 afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)]' %>
        </div>
      </div>

      <div class="mt-8 text-center">
        <%= link_to "Back", :back, class: "text-[#257A57] hover:underline afacad" %>
      </div>
    </div>
  </div>
</div>
