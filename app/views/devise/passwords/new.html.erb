<div class="bg-black h-8">
  <%= link_to "DAILY GRIND ", root_path, class: "ml-20 mt-4 text-2xl text-white afacad bg-black inline-block" %>
</div>
<div class="min-h-screen bg-black flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full mx-auto bg-white rounded-lg shadow-md overflow-hidden mt-14 mb-14">
    <div class="p-8">
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800 afacad-bold">Forgot your password?</h2>

      <p class="mb-12 text-center text-gray-600 afacad text-xl">
        Enter your email address below and we'll send you instructions to reset your password.
      </p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification class: "mb-4 text-red-500" %>

        <div class="space-y-6 afacad text-xl">
          <div class="flex items-center">
            <%= f.label :email, "Email *", class: 'w-1/3 text-left text-gray-700' %>
            <div class="w-2/3 flex justify-center">
              <%= f.input :email, required: true, autofocus: true, label: false, wrapper_html: { class: 'w-4/5' }, input_html: { autocomplete: "email", class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } %>
            </div>
          </div>
        </div>

        <div class="mt-8 flex justify-end">
          <%= f.button :submit, "SEND RESET INSTRUCTIONS", class: 'bg-[#257A57] py-3 px-16 rounded text-white inline-block transition duration-300 afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)]' %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
      </div>
    </div>
  </div>
</div>
