<div id="login-modal" data-login-target="modal" class="absolute right-0 mt-2 w-80 bg-white rounded-md shadow-lg overflow-hidden z-50 hidden">
  <div class="p-4">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Log in</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full px-3 py-2 border rounded-md text-black" %>
      </div>
      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full px-3 py-2 border rounded-md text-black" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>
      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full px-3 py-2 text-white rounded-md bg-[#257A57] afacad hover:shadow-[0_8px_10px_-3px_rgba(0,0,0,0.3)]" %>
      </div>
    <% end %>
    <div class="mt-2 text-sm">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-black" %><br />
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-black" %>
    </div>
  </div>
</div>
